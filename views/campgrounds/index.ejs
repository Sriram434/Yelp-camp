<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">	
			<h1>Welcome to the Yelp camp </h1> 
			<p> Our hand picked destinations </p>	
			<a class="btn btn-primary btn-lg" href="/campground/new">Add new campground</a>
		</div>	
	</header>
	
	

	<div class="row text-center">
		<% campgrounds.forEach(function(campground){ %>
		<div class="col-lg-4 col-md-6 col-sm-6" style="margin-bottom: 30px;">
			<div class="show thumbnail">
				<img src="<%= campground.image %>">
				<div class="caption">
					<h3> <%=campground.name.toUpperCase() %></h3>	
				</div>
				<p>
					<a href="/campground/<%= campground._id %>" class="btn btn-primary">More info!</a>
				</p>
			</div>
			
		</div>
	<% }) %>	
	</div>	

</div>
<%- include("../partials/footer") %>



